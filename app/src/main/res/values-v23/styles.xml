<resources>

    <style name="LightAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">@font/font_metropolis</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="android:statusBarColor">@color/lightPrimary</item>
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:colorControlNormal">@color/accent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="backgroundColor">@color/lightBackground</item>
        <item name="activityBackground">@drawable/background_light</item>
        <item name="iconColor">@color/lightIcon</item>
        <item name="nestedIconColor">@color/lightNestedIcon</item>
        <item name="bottomBarColor">@color/lightBottomBar</item>
        <item name="textColorPrimary">@color/lightTextPrimary</item>
        <item name="textColorSecondary">@color/lightTextSecondary</item>
        <item name="cardViewColor">@color/lightCardView</item>

    </style>

    <style name="DarkAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">@font/font_metropolis</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:statusBarColor">@color/darkPrimary</item>
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:colorControlNormal">@color/accent</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="backgroundColor">@color/darkBackground</item>
        <item name="activityBackground">@drawable/background_dark</item>
        <item name="iconColor">@color/darkIcon</item>
        <item name="nestedIconColor">@color/darkNestedIcon</item>
        <item name="bottomBarColor">@color/darkBottomBar</item>
        <item name="textColorPrimary">@color/darkTextPrimary</item>
        <item name="textColorSecondary">@color/darkTextSecondary</item>
        <item name="cardViewColor">@color/darkCardView</item>

    </style>

    <style name="ToolbarTextAppearance" parent="android:TextAppearance">

        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">normal</item>

    </style>

</resources>
