<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_frame"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kubiakdev.safely.ui.main.MainFragment"
        android:label="Passwords">
        <action
            android:id="@+id/action_mainFragment_to_passwordFragment"
            app:destination="@id/passwordFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.kubiakdev.safely.ui.password.PasswordFragment"
        android:label="New password">
        <action
            android:id="@+id/action_passwordFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.kubiakdev.safely.ui.detail.DetailFragment"
        android:label="Templates">
        <action
            android:id="@+id/action_detailFragment_to_templateFragment"
            app:destination="@id/templateFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/templateFragment"
        android:name="com.kubiakdev.safely.ui.template.TemplateFragment"
        android:label="New template">
        <action
            android:id="@+id/action_templateFragment_to_iconFragment"
            app:destination="@id/iconFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <argument
            android:name="iconResId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/iconFragment"
        android:name="com.kubiakdev.safely.ui.icon.IconFragment"
        android:label="Icons">
        <argument
            android:name="iconResId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
</navigation>